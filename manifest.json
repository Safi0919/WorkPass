{
  "manifest_version": 3,
  "name": "WorkPass",
  "version": "1.0",
  "description": "Checks job listings for visa eligibility and adds cursor highlight.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon-gray-16.png",
    "48": "icon-gray-48.png",
    "128": "icon-gray-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-gray-16.png",
      "48": "icon-gray-48.png",
      "128": "icon-gray-128.png"
    }
  }
}
